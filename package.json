{
  "name": "opnode-bundle",
  "version": "0.0.0",
  "description": "A standalone erc4337 bundler",
  "main": "execute.ts",
  "scripts": {
    "start": "ts-node src/execute.ts --port 3000 --config ./bundler.config.json",
    "build": "npx webpack",
    "deploy:local": "hardhat deploy --network localhost",
    "signer:balance": "hardhat run ./scripts/check-signer-balance.ts",
    "fetch:abi": "ts-node scripts/entrypoint-abi.ts",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "arch-diagram": "npx arkit -f src/execute.ts -o opnode-architecture.svg ",
    "run-mempool-sim": "ts-node scripts/mempool-simulate-clients.ts"
  },
  "author": "Idris Bowman",
  "license": "GNU",
  "dependencies": {
    "async-mutex": "0.4.0",
    "commander": "10.0.1",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "ethers": "5.7.1",
    "express": "4.18.2",
    "helmet": "6.1.5"
  },
  "devDependencies": {
    "@account-abstraction/contracts": "^0.6.0",
    "@account-abstraction/sdk": "^0.6.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.0",
    "@nomicfoundation/hardhat-toolbox": "1.0.2",
    "@nomiclabs/hardhat-ethers": "2.0.0",
    "@nomiclabs/hardhat-etherscan": "3.0.0",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/helmet": "4.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "arkit": "1.6.4",
    "eslint": "8.39.0",
    "hardhat": "2.11.0",
    "hardhat-deploy": "^0.11.11",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "webpack": "5.82.0",
    "webpack-cli": "5.0.2"
  }
