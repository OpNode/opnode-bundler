{
  "name": "root",
  "author": {
    "name": "Transeptor Labs",
    "email": "transeptorhq@gmail.com",
    "url": "https://transeptorlabs.io"
  },
  "license": "GNU",
  "homepage": "https://github.com/transeptorlabs/transeptor-bundler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transeptorlabs/transeptor-bundler.git"
  },
  "bugs": {
    "url": "https://github.com/transeptorlabs/transeptor-bundler/issues"
  },
  "private": true,
  "scripts": {
    "///ab": "_____________________________________________________________________",
    "///cv": "________________________WELCOME BUILDERS______________________________",
    "///tu": "_____________________________________________________________________",
    "clean": "rm -rf ./packages/*/lib ./packages/*/*.tsbuildinfo",
    "clean:deps": "rm -rf ./node_modules ./packages/*/node_modules",
    "build": "lerna run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lerna-clean": "lerna run clean",
    "eth-node": "cd packages/tools && npm run geth:start",
    "bundler-prep": "cd packages/tools && npm run bundler-prep",
    "start:dev": "node packages/cli/lib/src/cli.js --httpApi web3,eth,debug --txMode base",
    "watch:dev": "lerna watch -- lerna run build",
    "test": "lerna run test --concurrency 1",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@account-abstraction/contracts": "^0.6.0",
    "@types/jest": "^29.5.2",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "eslint": "8.39.0",
    "jest": "^29.5.0",
    "lerna": "^7.3.0",
    "pino-pretty": "^10.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./packages",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/lib/**.(t|j)s",
      "!**/test/**.(t|j)s",
      "!**/*/index.(t|j)s",
      "!types/**/*.(t|j)s",
      "!cli/**/*.(t|j)s",
      "!p2p/**/*.(t|j)s",
      "!validation/parseScannerResult.(t|j)s",
      "!tools/**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
